{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "rootDir": "src",
      "baseUrl": "src",
      "skipLibCheck": true,
      "paths": {
        "@routes/*": ["routes/*"],
        "@controllers/*": ["controllers/*"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }